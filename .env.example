# Django Environment Configuration
# Copy this file to .env: cp .env.example .env
# 
# Note: In Docker, values from docker-compose.yml environment section take precedence.
# This .env file is primarily for local development without Docker.
# For Docker deployments, all required values are set in docker-compose.yml.

# Database Configuration
# IMPORTANT: These values must match docker-compose.yml if using Docker
DB_NAME=iot_message_router
DB_USER=iot_user
DB_PASSWORD=iot_password
DB_HOST=db
DB_PORT=5432

# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production-use-a-random-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Web Port (for docker-compose port binding - uncomment ports section in docker-compose.yml if needed)
# WEB_PORT=8000
